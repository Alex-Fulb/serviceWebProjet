<header>
  <%- include('../partials/header'); %>
</header>

<body style="margin: 0 auto; text-align: center">
  <div>
    <p>Select a your language:</p>

    <div id="langdiv">
      <input type="radio" id="english" name="lang" value="eng" checked>
      <label for="english">English</label>
      <input type="radio" id="french" name="lang" value="fr">
      <label for="french">Français</label>
      <input type="radio" id="spanish" name="lang" value="spa">
      <label for="spanish">Español</label>
      <br>
      <button id="langbut" onclick="changeBrain()">Change language</button>
    </div>

  </div>
  <!--START-->
  <div class="row">
    <div class="chatbox chatbox22 chatbox--tray" style="border: 1px solid;">
      <!--Header-->
      <div class="chatbox__title">
        <h5 class="test"><a href="javascript:void()" style="user-select: none;">FAQBot</a></h5>
        <button class="chatbox__title__option" style="color: white; text-align: center; font-size : 24px;">
          +</button>
      </div>
      <!---->
      <!--TextBox-->
      <div class="chatbox__body">
        <ul class="messages"></ul>
      </div>
      <!--TextBox End-->
      <!--footer-->
      <div class="panel-footer">
        <div class="input-group">
          <form>
            <input type="submit" class="btn btn-warning btn-sm" style="float: right;" />
            <div style="overflow: hidden; padding-right: .5em;">
              <input id="inputChat" type="text" class="form-control input-sm" placeholder="Écrivez ici"
                autocomplete="off">
            </div>
          </form>
        </div>
      </div>
      <!---->
    </div>
  </div>
  <!--END-->

  <script src="https://unpkg.com/rivescript@latest/dist/rivescript.min.js"></script>
  <script src="/js/faqbotscript.js"></script>

</body>
